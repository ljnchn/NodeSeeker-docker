# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000

# Database Configuration
DATABASE_PATH=./data/nodeseeker.db

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=200

# RSS Configuration
RSS_URL=https://rss.nodeseek.com/
RSS_TIMEOUT=10000
RSS_USER_AGENT=NodeSeeker-Bot/1.0
RSS_CHECK_ENABLED=true
RSS_CRON_EXPRESSION=*/1 * * * *

# Data Cleanup
DATA_CLEANUP_ENABLED=true
CLEANUP_CRON_EXPRESSION=0 2 * * *
DATA_RETENTION_DAYS=30

# Telegram Configuration (Optional - can be set via web interface)
# TELEGRAM_BOT_TOKEN=your-bot-token
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook

# Logging
LOG_LEVEL=info